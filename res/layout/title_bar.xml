<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="bottom|left"
	android:gravity="bottom|left"
    >
    
    <View android:background="@color/blue"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/title_icon"
        android:id="@+id/title_underline"
        />
    
	<ImageButton
	    android:src="@drawable/ic_launcher"
	    android:id="@+id/title_icon"
	    android:padding="5dp"
	    android:scaleType="fitCenter"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    style="@style/ActionBarCompatHomeItem"
	    android:longClickable="true"
	    android:clickable="true"
	    android:layout_width="@dimen/actionbar_compat_button_home_width"
	    android:layout_height="@dimen/actionbar_compat_height"
		/>

	<TextView
	    android:id="@+id/title_text"
	    style="@style/Large"
	    android:layout_marginTop="1dp"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@+id/title_icon"
	    android:layout_toLeftOf="@+id/title_paste"
	    android:gravity="left|center_vertical"
	    android:text="@string/app_name" />
	
	<ProgressBar
	    android:id="@+id/title_progress"
	    style="@android:style/Widget.ProgressBar.Horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="10dp"
	    android:layout_alignLeft="@+id/title_text"
	    android:layout_alignTop="@+id/title_path"
	    android:layout_toLeftOf="@+id/title_search"
	    android:indeterminate="true"
	    android:visibility="gone"
	    android:layout_marginTop="2dp"
	    />
	
	<TextView
	    android:id="@+id/title_path"
	    style="@style/Small"
	    android:layout_marginTop="@dimen/large_text_height"
	    android:layout_alignTop="@+id/title_text"
	    android:layout_toRightOf="@+id/title_icon"
	    android:layout_toLeftOf="@+id/title_paste"
	    android:lines="2"
	    android:gravity="left|center_vertical"
	    android:text="/mnt/sdcard"
	    />

	<com.viewpagerindicator.TabPageIndicator
		android:id="@+id/content_pager_indicator"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_toRightOf="@+id/title_icon"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		/>
    
</RelativeLayout>
