<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="center_vertical|left"
	android:paddingLeft="4dp"
	android:paddingRight="4dp"
	android:id="@+id/layout"
	>
	<ImageView
		style="@style/icon.small"
		android:layout_marginRight="10dp"
		android:layout_centerVertical="true"
		android:id="@+id/content_icon"
		android:src="@drawable/icon"
		/>
	<TextView
		android:id="@+id/content_text"
		android:layout_alignWithParentIfMissing="true"
		android:layout_toRightOf="@+id/content_icon"
		android:layout_toLeftOf="@+id/eject"
		android:layout_alignTop="@+id/icon"
		android:layout_marginTop="4dp"
		android:text="@string/s_bookmarks"
		style="@style/Large"
		/>
	<ImageView
		android:id="@+id/eject"
		android:src="@drawable/eject"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_alignParentTop="true"
		android:layout_alignWithParentIfMissing="true"
		android:layout_centerVertical="true"
		android:contentDescription="@string/s_eject"
		android:visibility="gone"
		android:layout_toLeftOf="@+id/list_arrow"
		/>
	<ImageView
		android:id="@+id/list_arrow"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:contentDescription="@android:string/yes"
		android:visibility="gone"
		android:src="@drawable/indicate"
		/>
	<RelativeLayout
	    android:id="@+id/size_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="20dp"
		android:layout_below="@+id/content_text"
		android:layout_alignLeft="@+id/content_text"
		android:layout_alignParentRight="true"
		android:gravity="center"
	    >
	    
		<ProgressBar
			style="@android:style/Widget.ProgressBar.Horizontal"
			android:indeterminate="false"
			android:layout_width="fill_parent"
			android:layout_height="10dp"
			android:layout_marginTop="1dp"
			android:id="@+id/size_bar"
			/>
	
		<TextView
		    android:id="@+id/size_text"
			style="@style/Small"
			android:layout_alignParentRight="true"
			android:layout_marginRight="4dp"
			android:text="@string/s_size" />
	</RelativeLayout>
</RelativeLayout>