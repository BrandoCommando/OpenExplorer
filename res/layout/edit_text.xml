<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout android:id="@+id/layout_info"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:gravity="center"
	>
		<ProgressBar android:id="@+id/progress"
		    style="@android:style/Widget.ProgressBar.Horizontal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignBottom="@+id/label_path"
		    android:layout_toLeftOf="@+id/btn_save"
		    android:layout_marginRight="4dp"
		    />
	    <TextView android:id="@+id/label_path"
	    	android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignBottom="@+id/btn_save"
			android:gravity="center"
			android:text="File Path: /" />
		<Button android:id="@+id/btn_save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/s_save"
			android:layout_alignParentTop="true"
			android:layout_toLeftOf="@+id/btn_cancel" />
		<Button android:id="@+id/btn_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/s_cancel"
			android:layout_toLeftOf="@+id/btn_toggle_keyboard"
			android:layout_alignParentTop="true" />

		<ToggleButton
		    android:id="@+id/btn_toggle_keyboard"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:layout_alignBottom="@+id/btn_cancel"
		    android:text="@string/s_toggle_keyboard" />
		
		<TextView android:id="@+id/label_size"
	    	android:layout_width="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_height="wrap_content"
			android:layout_toLeftOf="@+id/btn_save"
			android:layout_alignTop="@+id/btn_save"
			android:layout_marginRight="10dp"
			android:visibility="gone"
			android:gravity="center"
			android:text="Size: 0" />
	</RelativeLayout>
    <EditText
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:inputType="textMultiLine"
		android:id="@+id/text_edit"
		android:layout_below="@+id/layout_info"
		android:gravity="top|left"
		android:layout_alignParentLeft="true">
        <requestFocus></requestFocus>
    </EditText>
    
</RelativeLayout>
