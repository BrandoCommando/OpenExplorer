<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_warn_wtf_message"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/wtf_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_yes" />

        <Button
            android:id="@+id/wtf_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_no" />

        <Button
            android:id="@+id/wtf_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_wtf_preview" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/wtf_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_wtf_remember" />

    <EditText
        android:id="@+id/wtf_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:focusable="false"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_warn_wtf_ps"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>