<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/content_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:drawable/toast_frame"
        android:visibility="gone" >

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/textView1"
            style="@style/Mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/s_status_loading" />
    </LinearLayout>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/multiselect_view"
	    android:id="@+id/content_grid"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:verticalSpacing="4dp"
		android:horizontalSpacing="4dp"
		android:columnWidth="@dimen/grid_width"
		android:numColumns="auto_fit"
		android:stretchMode="columnWidth"
		android:gravity="center"
		android:fastScrollEnabled="true"
		/>


    <RelativeLayout
        android:id="@+id/multiselect_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/toast_frame"
        android:orientation="horizontal"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/multiselect_image"
            android:src="@drawable/multiselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Gallery
            android:id="@+id/multiselect_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_icon_size"
            android:gravity="left"
            android:spacing="2dp"
            android:unselectedAlpha="0.9"
            android:animateLayoutChanges="true"    
            android:descendantFocusability="afterDescendants"
            android:layout_toRightOf="@+id/multiselect_image"
			android:layout_toLeftOf="@+id/multiselect_close"
            />
        <ImageButton
            android:id="@+id/multiselect_close"
            android:src="@android:drawable/btn_dialog"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    
</RelativeLayout>
