<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/org.brandroid.openmanager"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/content_pager_frame"
	android:orientation="vertical"
	>
    <FrameLayout
        android:id="@+id/content_pager_indicator_frame"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:visibility="gone"
		>
		<view
		    class="com.viewpagerindicator.TabPageIndicator"
			android:id="@+id/content_pager_indicator"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:padding="10dip"
			app:selectedBold="true"
			/>
	</FrameLayout>
    
	<org.brandroid.openmanager.views.OpenViewPager
	    android:id="@+id/content_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
	    />
</LinearLayout>